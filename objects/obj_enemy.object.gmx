// Dying:
if collision_circle(x, y, 16, obj_bullet, false, true) {
    instance_create(x,y,obj_enemydead)
    choice = random(2)
    if choice &lt; 1 {
        audio_play_sound(snd_death0, 1, false)
    }
    if choice &gt;= 1 {
        audio_play_sound(snd_death1, 1, false)
    }
    instance_destroy()
    instance_destroy(obj_bullet)
}

if instance_exists(obj_player)
{
    var sightBlocked = true
    var vision = false
    var notice = false

    // Pathfinding:
    if mp_grid_path(global.grid,path,x,y,lastX,lastY,true) and distance_to_point(lastX, lastY) &gt; 64
    {
        path_start(path,3,"",true)
        sprite_index = spr_enemywalking
    }
    else if not mp_grid_path(global.grid,path,x,y,lastX,lastY,true)
    {
        path_end()
    }
    else
    {
        sprite_index = spr_enemy
    }

    // Targeting:
    if distance_to_object(obj_player) &lt;= 256
    {
        sightBlocked = min(collision_line(x,y,obj_player.x,obj_player.y,obj_obstruction,false,true),
                    collision_line(x,y,obj_player.x,obj_player.y-24,obj_obstruction,false,true),
                    collision_line(x,y,obj_player.x+24,obj_player.y,obj_obstruction,false,true),
                    collision_line(x,y,obj_player.x,obj_player.y+24,obj_obstruction,false,true),
                    collision_line(x,y,obj_player.x-24,obj_player.y,obj_obstruction,false,true))
        vision = max(abs(image_angle - point_direction(x,y,obj_player.x,obj_player.y)) &lt;= 60,
                     abs(image_angle - point_direction(x,y,obj_player.x,obj_player.y)) &gt;= 300)
        if distance_to_point(obj_player.x,obj_player.y) &lt;= 24
        {
            notice = true
        }
        if (not sightBlocked and (vision or notice)) and instance_exists(obj_player)
        {
            lastX = obj_player.x
            lastY = obj_player.y
            image_angle = point_direction(x,y,lastX,lastY)
            if canFire
            {
                bullet = instance_create(x,y,obj_bulletenemy)
                bullet.speed = 16
                bullet.direction = image_angle + random_range(-8,8)
                alarm[0] = 4
                canFire = false
            }
        }
        else
        {
            canFire = false
            alarm[0] = 30
        }
    }
}
