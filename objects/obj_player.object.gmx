            <string>// Rotation:
image_angle = point_direction(x, y, mouse_x, mouse_y)

// Movement:
if room = map {
    walking = 3
}
if room = map_vent {
    walking = 1
}

if keyboard_check(ord('A')) or keyboard_check(ord('D')) or keyboard_check(ord('W')) or keyboard_check(ord('S')) {
    if keyboard_check(ord('A')) and not collision_rectangle(x-14,y-8,x,y+8,obj_wall,false,true) {
        x -= walking
        sprite_index = spr_player_walking
    }
    if keyboard_check(ord('D')) and not collision_rectangle(x,y-8,x+14,y+8,obj_wall,false,true) {
        x += walking
        sprite_index = spr_player_walking
    }
    if keyboard_check(ord('W')) and not collision_rectangle(x-8,y-14,x+8,y,obj_wall,false,true) {
        y -= walking
        sprite_index = spr_player_walking
    }
    if keyboard_check(ord('S')) and not collision_rectangle(x-8,y,x+8,y+14,obj_wall,false,true) {
        y += walking
        sprite_index = spr_player_walking
    }
}
else {
    sprite_index = spr_player
}

// Shooting:
if mouse_check_button(mb_left) and canFire and ammo &gt; 0 {
    bullet = instance_create(x,y,obj_bullet)
    bullet.direction = image_angle
    bullet.speed = 20
    ammo -= 1
    alarm[0] = cooldown
    canFire = false
    audio_play_sound(sound_PistolSilenced,10,false)
}

// Reloading:
if keyboard_check(ord('R')) and ammo != maxAmmo {
    reloading = true
    canFire = false
    alarm[1] = 180
}

// Walking in vents:
if collision_rectangle(x,y,x,y,obj_vent,false,true) {
        walking = 1
}

// Entering and leaving vents:
if collision_rectangle(x,y,x,y,obj_ventopen,false,true) and not justEntered {
    if keyboard_check(ord('Q')) {
        justEntered = true
        room_goto(map)
        alarm[2] = 10
    }
}
    
if collision_rectangle(x,y-4,x,y+4,obj_table,false,true) and not justEntered {
    if keyboard_check(ord('Q')) {
        justEntered = true
        room_goto(map_vent)
        alarm[2] = 10
    }
}
</string>
